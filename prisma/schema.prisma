generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  image     String
  role    Role     @default(USER)
  emailVerified   Boolean
  createdAt DateTime @default(now())
  store   Store?
}

model Store {
  id   Int    @id @default(autoincrement())
  name String

  user   User @relation(fields: [userId], references: [id])
  userId Int @unique
  product   Product[]
}

model Product {
  id Int @id
  name String
  description String
  price String
  size String

  store Store @relation(fields: [storeId],references: [id]) 
  storeId Int 
}

model Categorie{
  id Int @id
  name String
  
}



enum Role {
  USER
  ADMIN
}

